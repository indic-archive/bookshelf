                <h1 class="site-title">
                    <a href="/">
                    <?php if ($this->themeSetting('logo')): ?>
                        <img src="<?php echo $this->themeSettingAssetUrl('logo'); ?>" alt="<?php echo $escape($siteTitle); ?>" />
                    <?php else: ?>
                        <?php echo $escape($siteTitle); ?>
                    <?php endif; ?>
                    </a>
                </h1>
                <div id="search">
                    <?php echo $this->partial('common/search-form'); ?>
                </div>

                <nav>
